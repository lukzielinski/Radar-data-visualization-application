{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true
    },
    "eslint.alwaysShowStatus": true,
    "eslint.format.enable": true,
    "svelte.enable-ts-plugin": true,
    "eslint.probe": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html",
        "vue",
        "markdown",
        "svelte"
    ],
    "eslint.validate": [
        "typescript",
        "javascript",
        "svelte"
    ],
    "[svelte]": {
				"editor.defaultFormatter": "dbaeumer.vscode-eslint",
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
		"editor.insertSpaces": true,
}